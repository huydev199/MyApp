<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:orientation="vertical">

    <include
        layout="@layout/header_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin_secondary"
        android:layout_marginTop="40dp"
        android:paddingLeft="16dp">

        <TextView
            android:fontFamily="@font/notosanskr_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_push_notifications"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:lineHeight="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnPushNotifications"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_switch_on"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin_secondary"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_recyclerview"
        android:padding="@dimen/main_padding">

        <TextView
            android:textFontWeight="400"
            android:fontFamily="@font/notosanskr_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18sp"
            android:text="@string/hint_push_notification"
            android:textColor="@color/colorTextPrimary" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin_secondary"
        android:paddingLeft="16dp">

        <TextView
            android:fontFamily="@font/notosanskr_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_email_notifications"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:lineHeight="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnEmailNotifications"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_switch_on"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin_secondary"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_recyclerview"
        android:padding="@dimen/main_padding">

        <TextView
            android:textSize="14sp"
            android:textFontWeight="400"
            android:fontFamily="@font/notosanskr_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18sp"
            android:text="@string/hint_email_notification"
            android:textColor="@color/colorTextPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/rlvPolicy"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@drawable/btn_enable"
        android:fontFamily="@font/bebasneue_regular"
        android:text="@string/btn_save"
        android:textColor="@color/colorTextPrimary"
        android:textSize="28sp" />
</LinearLayout>