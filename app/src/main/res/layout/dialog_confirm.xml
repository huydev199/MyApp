<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_dialog"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/margin_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_24"
            android:paddingEnd="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24"
                android:textSize="16sp"
                android:lineHeight="24sp"
                android:textFontWeight="400"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorPrimaryTitle" />
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_15"
                android:lineHeight="20sp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryContent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|right"
            android:paddingEnd="@dimen/margin_16"
            android:paddingTop="@dimen/margin_18"
            android:paddingBottom="@dimen/margin_18"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_24"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:padding="@dimen/margin_4"
                android:lineHeight="16sp"
                android:minWidth="0dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/btn_cancel"
                android:textColor="@color/btnColorCommon"/>
            <TextView
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:padding="@dimen/margin_4"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:lineHeight="16sp"
                android:minWidth="0dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/btn_continue"
                android:textColor="@color/btnColorCommon" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>