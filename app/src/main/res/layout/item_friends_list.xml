<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backGround">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_recyclerview"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/main_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/id_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_avatar_default"

                   />

                <TextView
                    android:fontFamily="@font/notosanskr_bold"
                    android:textAllCaps="false"
                    android:id="@+id/id_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_tiny"
                    android:text="User Names"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:textFontWeight="900"
                    android:textSize="@dimen/size_normal"></TextView>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:textAllCaps="false"
                    android:id="@+id/btnUnfriend"
                    android:layout_width="@dimen/width_72"
                    android:layout_height="24dp"
                    android:background="@drawable/btn_pink_color"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="@string/unfriend"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/size"
                    android:textFontWeight="900"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>